<div class="body-audit">

  <div class="title-audit">
    <h1>DEPARTMENTS</h1>
  </div>


<div class="container-cards">
{{#each dept}}
<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title text-white">{{this.name}}</h5>
    <p class="card-title text-black">{{this.description}}</p>
    <a href="/audit/{{this._id}}" class="btn btn-secondary btn-sm">See workers & Audit</a>
    <a href="/audit/edit" >Edit</a>
    <a href="/audit/{{this._id}}" >Delete</a>
  </div>
</div>
{{/each}}
</div>

  <div class="container-add">
    <h2>Add dept</h2>
    <form action="/audit" method="post">

        <label>Name</label>
        <input type="text" name="name" >

        <label>Description</label>
        <input type="text" name="description" >

        <input type="submit" value="Create">
    </form>
  </div>


</div>
