
<div class="body-sg">
    <div class="container-sg" >
    <div class="wrap">
        <h1 class="h2-lg"><i class="fas fa-user-plus"></i></h1>
        <form action="/signup" method="post">
            <input type="text" name="name" class="input-sg" placeholder="Name.." required>
            <input type="email" name="email" class="input-sg" placeholder="Email.." required>
            <input type="password" name="password" class="input-sg" placeholder="Password.." required>
            <input type="password" name="passwordRepeat" class="input-sg" placeholder="Repeat Password.." required>

            <div class="texto">
            <label for="select"> Status </label>
            </div>
            <div class="select">
                <select type="select" name="select" id="select-sg" placeholder=""> 
                    <option value=""></option>
                    <option value="company">Company</option>
                    <option value="employee">Employee</option>
                </select>
                <i></i>
            </div>
            <input type="submit" value="SIGN UP" class="input-sg">
        </form>
        <div class="errorMessage">
            {{#if errorMessage}}
            {{errorMessage}}
            {{/if}}
        </div>
    </div>
    </div>
</div>
