<h1>{{employee.name}} {{employee.lastName}}</h1>

<form action="/audit/auditory/{{employee._id}}/edit?employee_id={{employee._id}}" method="post" enctype="multipart/form-data">
  <label for="">Email:</label>
  <input type="text" name="email" value="{{employee.email}}"/>

  <label for="">Phone number: </label>
  <input type="text" name="phone" value="{{employee.phone}}"/>

  <label for="">Position:</label>
  <input type="text" name="position" value="{{employee.position}}"/>

  <label for="">Photo:</label>
  <input type="file" name="img"/>
  <input type="hidden" name="previousImg" value="{{employee.imgPath}}"/>

  <button type="submit">EDIT</button>
</form>

<a href="/audit/auditory/{{employee._id}}">Return</a> 

